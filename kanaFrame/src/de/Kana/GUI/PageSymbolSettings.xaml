<Page x:Class="KanaFrame.PageSymbolSettings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KanaFrame"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="PageSymbolSettings">
    <Grid>
        <Border Style="{StaticResource StdBorder}" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="btnCancel" Content="Cancel" Click="btnCancel_Click"/>
                    <Button x:Name="btnOk" Content="OK" Click="btnOk_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        
        <Border Style="{StaticResource StdBorder}" VerticalAlignment="Top">
            <StackPanel>
                <StackPanel HorizontalAlignment="Left">
                    <Label Style="{StaticResource HeaderLabel2}" Content="テストー　タイプー" HorizontalAlignment="Left"/>
                    <Separator DockPanel.Dock="Top" />
                </StackPanel>
                <RadioButton x:Name="rbtnMatch" Margin="5" IsChecked="True">Match</RadioButton>
                <RadioButton x:Name="rbtnFlow" Margin="5">Flow</RadioButton>
            </StackPanel>
        </Border>
    </Grid>
</Page>
