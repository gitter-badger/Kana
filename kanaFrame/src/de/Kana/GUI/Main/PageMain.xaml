<local:MenuPage x:Class="KanaFrame.PageMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KanaFrame"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="PageMain">

    <Grid>
        <DockPanel>
            <Border DockPanel.Dock="Top" HorizontalAlignment="Stretch" Height="4" Margin="0" Padding="0" />
            <Viewbox>
            <UniformGrid Rows="3" Columns="1">
                <UniformGrid.Resources>
                    <Style TargetType="Button" BasedOn="{StaticResource MainBtn}"/>
                </UniformGrid.Resources>
                    <Button x:Name="btnSymbol" Click="btnSymbol_Click" Content="Symbol"/>
                    <Button x:Name="btnVocabulary" Content="Vocabulary"/>
                    <Button x:Name="btnKanji" Content="Kanji"/>
                </UniformGrid>
            </Viewbox>
        </DockPanel>
    </Grid>
</local:MenuPage>